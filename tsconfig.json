{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "lib": ["ESNext"],
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}